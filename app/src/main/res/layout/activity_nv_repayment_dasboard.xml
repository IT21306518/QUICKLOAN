<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/nv_top_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="11sp"
                        android:text="$5000"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:gravity="center_horizontal"

                        android:lineSpacingExtra="11sp"
                        android:text="Hello,"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="5sp"
                        android:text="Available Balance"

                        android:textColor="#ccffffff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="104dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="5sp"
                        android:text="Mr.user"
                        android:textColor="#ccffffff"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_marginTop="36dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="21dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="7sp"
                                android:text="Loan Amount"
                                android:textColor="#1c1939"
                                android:textSize="15sp" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="25dp"
                                android:lineSpacingExtra="7sp"
                                android:text="Total paid"
                                android:textColor="#1c1939"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="7sp"
                                android:text="$20000"
                                android:textColor="#1c1939"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="25dp"
                                android:lineSpacingExtra="7sp"
                                android:text="$12000"
                                android:textColor="#1c1939"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </FrameLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="167dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"

            android:text="Repayment"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_margin="21dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="7sp"

                        android:text="Due Amount"
                        android:textColor="#1c1939"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="60dp"
                        android:lineSpacingExtra="7sp"

                        android:text="Due Date"
                        android:textColor="#1c1939"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="7sp"

                        android:text="$2000"
                        android:textColor="#1c1939"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="30dp"
                        android:lineSpacingExtra="7sp"
                        android:text="08/05/2023  "
                        android:textColor="#1c1939"
                        android:textSize="20sp" />
                </LinearLayout>


                <View
                    android:id="@+id/view5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="100dp"
                    android:lineSpacingExtra="7sp"

                    android:text="in 03 days  "
                    android:textColor="#1c1939"
                    android:textSize="15sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_repayment"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#9B92EA"
            android:text="Pay now" />


        <TextView
            android:id="@+id/textdashboard"
            android:layout_width="166dp"
            android:layout_height="52dp"
            android:padding="8dp"
            android:text="View recent payments"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>



</androidx.core.widget.NestedScrollView>